<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo góc -->
    <corners android:radius="40dp" />

    <!-- Viền -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />   <!-- trắng 20% -->

    <!-- Nền gradient -->
    <gradient
        android:startColor="#FF4FC7FF"
    android:endColor="#FFFFA726"
    android:angle="0"/>

    <!-- Padding để text không bị sát mép -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp"/>
</shape>
