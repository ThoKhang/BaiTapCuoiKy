<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền trắng -->
    <solid android:color="#FFFFFF" />

    <!-- Bo góc -->
    <corners android:radius="16dp" />

    <!-- Viền xanh nhạo -->
    <stroke
        android:width="2dp"
        android:color="#1565C0" />

    <!-- Padding bên trong -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp" />
</shape>