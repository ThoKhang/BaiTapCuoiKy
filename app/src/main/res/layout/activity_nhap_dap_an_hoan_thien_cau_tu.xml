<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2FF"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="top"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- LỚP DƯỚI CÙNG: xanh nhạt nhất (lòi ra nhiều và hẹp nhất) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="-25dp"
            android:background="@drawable/bg_border_tn"
            android:backgroundTint="#98D9F9" />

        <!-- LỚP GIỮA: xanh sáng hơn (lòi ra ít hơn, rộng hơn chút) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="-12dp"
            android:background="@drawable/bg_border_tn"
            android:backgroundTint="#2DB5F9" />

        <!-- LỚP CHÍNH: xanh đậm (full chiều ngang) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_tn"
            android:backgroundTint="#5699CF"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thanh tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/quayLai"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Back"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/tvTieuDePhu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgVuongMieng"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Crown"
                    android:src="@drawable/vm" />
            </LinearLayout>

            <!-- Thanh câu hỏi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5699CF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_question_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Câu 1/10"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <!-- Nút hướng dẫn -->
                <LinearLayout
                    android:id="@+id/btn_huong_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_huong_dan"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/tv_huong_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hướng dẫn"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/icon_play"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Play"
                        android:src="@drawable/video_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="#89C2EB"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/icon_help"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="Help icon"
                        android:padding="4dp"
                        android:src="@drawable/question_1" />
                </LinearLayout>
            </LinearLayout>
            <!-- THANH THÔNG TIN CÂU HỎI -->
            <LinearLayout
                android:id="@+id/thanh_thong_tin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical"
                android:background="#5699CF"
                android:weightSum="2">

                <!-- +5 ĐIỂM (BÊN TRÁI) -->
                <TextView
                    android:id="@+id/tv_diem_thuong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="+ 5 điểm"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFE600" />

                <!-- THỜI GIAN CÒN (BÊN PHẢI) -->
                <TextView
                    android:id="@+id/tv_thoi_gian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Thời gian còn: 60s"
                    android:textSize="20sp"
                    android:textColor="#FFE600"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Nội dung câu hỏi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_border"
                android:backgroundTint="#FFFFFF"
                android:elevation="2dp"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCauHoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Trời đang mưa nên phải mang theo _____________."
                    android:textColor="#000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvGiaiThich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Đây là giải thích"
                    android:textColor="#C8B213"
                    android:textSize="22sp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- KHU VỰC NHẬP ĐÁP ÁN - ĐẸP CHUẨN GIAO DIỆN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_blue_round"
        android:backgroundTint="#97D7FA"
        android:elevation="3dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập đáp án"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="14dp" />

        <EditText
            android:id="@+id/edtDapAn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_blue_round"
            android:backgroundTint="#FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:hint="Nhập đáp án..."
            android:gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTiepTuc"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button_tt"
            android:gravity="center"
            android:text="Tiếp tục"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>