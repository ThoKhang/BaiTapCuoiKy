<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Nút quay lại và tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bảng cửu chương"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Khung hiển thị bảng cửu chương -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Hình tròn trên cùng -->
        <TextView
            android:id="@+id/tvCircleNumber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_circle_red"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-28dp"
            android:elevation="4dp">
        </TextView>

        <!-- Khung nền xám -->
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_gray_rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="14dp"
            android:paddingTop="40dp">

            <!-- Hình chữ nhật nền cam -->
            <FrameLayout
                android:layout_width="210dp"
                android:layout_height="370dp"
                android:background="@drawable/bg_orange_box"
                android:padding="18dp">

                <!-- Nội dung bảng cửu chương -->
                <TextView
                    android:id="@+id/tvBangCuuChuong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="1 x 1 = 1\n2 x 1 = 2\n3 x 1 = 3\n4 x 1 = 4\n5 x 1 = 5\n6 x 1 = 6\n7 x 1 = 7\n8 x 1 = 8\n9 x 1 = 9\n10 x 1 = 10"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:lineSpacingExtra="2dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Hàng các nút chọn bảng -->
    <GridLayout
        android:id="@+id/gridNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:gravity="center"
        android:layout_margin="8dp">

        <!-- 10 nút số - Hardcode màu trực tiếp -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="1"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#ADD8E6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="2"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="3"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="4"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="5"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="6"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="7"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="8"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="9"
            android:textSize="18sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn10"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="10"
            android:textSize="15sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF" />

    </GridLayout>

    <!-- Nút luyện tập -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLuyenTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Luyện tập"
        android:textColor="#FFFFFF"
        app:backgroundTint="#1294D4"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

</LinearLayout>