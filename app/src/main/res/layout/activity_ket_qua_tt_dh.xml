<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/cat2">

    <!-- Thanh tiêu đề -->

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <!-- Score Circle -->
        <FrameLayout
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:contentDescription="Score Circle"
                android:scaleType="fitCenter"
                android:src="@drawable/circle_score_y" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:alpha="0.8"
                    android:text="Điểm"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85/100"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Result Message with Firework -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:contentDescription="Firework Left"
                android:src="@drawable/firework"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tv_result_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúc mừng!"
                android:textColor="@color/blue_settings"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:contentDescription="Firework Right"
                android:src="@drawable/firework"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stats_card_bg"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Time"
                        android:src="@drawable/clockk" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="15 phút 30 giây"
                            android:textColor="#00BCD4"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#3E3A3A" />

                <!-- Correct Answers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Correct"
                        android:src="@drawable/tick_premium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Câu trả lời đúng"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_correct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="17/20"
                            android:textColor="#4CAF50"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Wrong Answers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="50dp">

        <!-- Nút bên trái -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThamGia"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#F18732"
            android:text="Thử lại"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

        <!-- Nút viền -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnXepHang"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#FFFFFF"
            android:text="Chia sẻ"
            android:textColor="#F18732"
            android:textSize="20sp"
            android:textStyle="bold"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="#F18732" />
    </LinearLayout>

</LinearLayout>