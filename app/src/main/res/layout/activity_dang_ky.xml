<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.Account.DangKy.DangKy">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="420dp"
      android:src="@drawable/img_vector"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/strokeTextView"
        android:layout_width="237dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inkutantiqua"
        android:text="Nhóm 5ae"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="220dp"
        android:src="@drawable/img_giaodienbatdau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strokeTextView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:fontFamily="@font/itim"
        android:text="Đăng ký "
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim"
            android:text="Email"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/eTextEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_border"
            android:hint="Nhập email của bạn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/itim"
            android:text="Mật khẩu"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/eTextMatKhau"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_border"
            android:hint="Nhập mật khẩu của bạn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/itim"
            android:text="Nhập lại mật khẩu"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/eTextNhapLaiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_border"
            android:hint="Nhập mật khẩu của bạn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDangKy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FDC858"
            android:clipToOutline="false"
            android:text="Đăng ký"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.894"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itim"
                android:text="or"
                android:textColor="#999999"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="810dp">

            <!-- Google -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnGoogle"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="30dp"
                app:strokeColor="#DADCE0"
                app:strokeWidth="2dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_gg" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Facebook -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnFacebook"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#1877F2"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_fb"
                    app:tint="#FFFFFF" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

    <ImageButton
      android:id="@+id/ibtnBack"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginTop="44dp"
      android:background="@android:color/transparent"
      android:contentDescription="Nút quay lại"
      android:src="@drawable/img_back"
      app:layout_constraintEnd_toStartOf="@+id/strokeTextView"
      app:layout_constraintHorizontal_bias="0.333"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>