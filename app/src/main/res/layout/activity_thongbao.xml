<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_caidat"
    tools:context=".ThongBao">

    <!-- BACK BUTTON + TITLE (trong suốt hoàn toàn) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:shadowColor="#88000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        android:layout_marginStart="12dp"/>

    <!-- AVATAR CÚ (giữ lại nhưng đẹp hơn) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatarContainer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="65dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_owl"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>

    <!-- DANH SÁCH CÀI ĐẶT THÔNG BÁO -->
    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/avatarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ITEM 1: Báo thức sáng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F9FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Báo thức sáng"
                    android:textColor="#1A1A1A"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="#007BAA"
                    app:trackTint="#66007BAA"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- ITEM 2: Giờ sáng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F9FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Giờ sáng"
                    android:textColor="#1A1A1A"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtMorningTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:00  >"
                    android:textColor="#007BAA"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- ITEM 3: Báo thức trưa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F9FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Báo thức trưa"
                    android:textColor="#1A1A1A"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchNoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="#007BAA"
                    app:trackTint="#66007BAA"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- ITEM 4: Giờ trưa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F9FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Giờ trưa"
                    android:textColor="#1A1A1A"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtNoonTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:20  >"
                    android:textColor="#007BAA"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- ITEM 5: Báo thức tối -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F9FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Báo thức tối"
                    android:textColor="#1A1A1A"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEvening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="#007BAA"
                    app:trackTint="#66007BAA"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- ITEM 6: Giờ tối -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F9FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Giờ tối"
                    android:textColor="#1A1A1A"
                    android:textSize="19sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtEveningTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:20  >"
                    android:textColor="#007BAA"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>