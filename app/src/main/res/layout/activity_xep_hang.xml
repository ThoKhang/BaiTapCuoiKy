<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF3E0">

    <!-- Phần Header: Nút Back + Tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Nút quay về -->
        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#8B4513"
            android:contentDescription="Quay lại" />

        <!-- Tiêu đề lớn -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xếp hạng người chơi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#8B4513"
            android:gravity="center" />

        <!-- Để cân bằng với nút back bên trái -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Thông tin người chơi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardThongTinNguoiChoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/blue_custom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Avatar + tên + điểm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <ImageView
                    android:id="@+id/imgAvatarUser"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/boy"
                    android:background="@drawable/avatar_circle_bg"
                    android:padding="6dp" />

                <!-- Tên + rank -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvYourName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn (USERNAME_05)"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/imgRankMedal"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/top3"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvYourRank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hạng 5"
                            android:layout_marginStart="6dp"
                            android:textColor="#FFDCA8"
                            android:textSize="28sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Điểm -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_startyellow" />

                    <TextView
                        android:id="@+id/tvYourScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.000"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:alpha="0.25"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="14dp" />

            <!-- Tổng số người chơi -->
            <TextView
                android:id="@+id/tvTotalPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng cộng 1.248 người chơi"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Bảng xếp hạng toàn server -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top người chơi xuất sắc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#8B4513"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerXepHang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>