<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Hình mèo full màn -->
    <ImageView
        android:id="@+id/imgCat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgr_lh_tinhtoan"
        android:scaleType="centerCrop" />

    <!-- LỚP CHỒNG NÚT + THANH TIÊU ĐỀ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="40dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <!-- THANH TIÊU ĐỀ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/quayLai"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Liên hoàn tính toán"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/imglhtt"
                android:layout_width="216dp"
                android:layout_height="195dp"
                android:layout_marginBottom="190dp"
                android:adjustViewBounds="true"
                android:src="@drawable/lhtt" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlay"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#F18732"
                android:text="Thử ngay"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />



        </LinearLayout>

    </LinearLayout>

</FrameLayout>
